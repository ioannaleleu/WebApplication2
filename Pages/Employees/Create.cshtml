
@page

@model WebApplication2.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Create";
}
 
<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DateOfBirth" class="control-label"></label>
                <input asp-for="Employee.DateOfBirth" class="form-control" />
                <span asp-validation-for="Employee.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.HireDate" class="control-label"></label>
                <input asp-for="Employee.HireDate" class="form-control" />
                <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.JobTitleID" class="control-label">Job Title</label>
                <select asp-for="Employee.JobTitleID" class ="form-control" asp-items="ViewBag.JobTitleID"></select>
                <span asp-validation-for="Employee.JobTitleID" class="text-danger"></span>
            </div>
           
               
           
            <div class="form-group">
                 <label asp-for="Employee.EmployeeDepartments" class="control-label">Employee Departments</label>
              <div class="table">
                 <table>
                     <tr>
                     @{
                        
                        int cnt = 0;
                         foreach (var cat in Model.AssignedDepartmentDataList)
                     { 
                        if (cnt++ % 3 == 0)
                    {
                        @:</tr><tr>
                     }
                        @:<td>
                        <input type="checkbox" 
                        name="selectedDepartments" 
                        value="@cat.DepartmentID"
                        @(Html.Raw(cat.Assigned ? "checked=": "")) />
                        @cat.DepartmentID @: @cat.Name
                         @:</td>
                     }
                     @:</tr>
                     }
                     </table>
                     </div>
                     </div>
                      </br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
